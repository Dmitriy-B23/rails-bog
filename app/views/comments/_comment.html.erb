<% @article.comments.each do |comment| %>
  <% unless comment.archived? %>
    <p>
      <strong><%= comment.commenter %>:</strong>
      <%= comment.body %>
    </p>
    <p>
      <%= link_to "Удалить комментарий", [ @article, comment ], method: :delete, data: { turbo_method: :delete, turbo_confirm: "Вы уверены?" } %>
    </p>
  <% end %>
<% end %>

